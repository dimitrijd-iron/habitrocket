<h1>Welcome to Habit Rocket</h1>
<h1>Signup and start using HAbitRocket today!</h1>


<form action='/auth/signup' method='POST'>
  <h2>Sign Up</h2>
  <div>
  <label for='name'>Name</label>
  <input type='text' name='name' minlength="4">
  </div>
  <br>
  <div>
  <label for='email'>email</label>
  <input type='email' name='email' minlength="6">
  </div>
  <br>
  <div>
  <label for=''>Mobile (optional)</label>
  <input type='tel' name='mobile' minlength="5">
  </div>
  <br>
  <div>
  <label for='password'>Password</label>
  <input type='password' name='password' minlength="5">
  </div>

  <button type='submit'>signup</button>  

</form>


{{#if suggestions}}
  Suggestions:
  {{#each suggestions}}
    <p>{{this}}</p>
  {{/each}}
{{/if}}

{{!-- error message display: --}}

{{#if errorMessage}}
  <div class="error-message">
    {{ errorMessage }}
  </div>
{{/if}}