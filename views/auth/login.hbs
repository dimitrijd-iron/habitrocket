<h1>Welcome back to Habit Rocket</h1>
<h1>Please, login</h1>


<form action='/auth/login' method='POST'>
  <h2> Login </h2>

  <div>
  <label for=''>email</label>
  <input type='email' name='email' minlength="4">
  </div>
  <br>
  <div>
  <label for=''>Password</label>
  <input type='password' name='password' minlength="5">
  </div>

  <button type='submit'>log-in</button>
</form>


{{#if suggestions}}
  Suggestions:
  {{#each suggestions}}
    <p>{{this}}</p>
  {{/each}}
{{/if}}

{{!-- error message display: --}}

{{#if errorMessage}}
  <div class="error-message">
    {{ errorMessage }}
  </div>
{{/if}}